        };
        // Para el √≠ndice, convertimos el objeto a un arreglo para poder filtrar
        const indiceArray = Object.keys(indice).map(key => ({ key: key, ...indice[key] }));
        const uniqueIndiceArray = eliminarDuplicados(indiceArray, 'key');
